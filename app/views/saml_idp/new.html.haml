%h4 Saml IDP Login
%h5= "ACS URL: #{@saml_acs_url}"
= simple_form_for :wellpoint_user, url: "/saml/auth", method: :post do |f|
  = hidden_field_tag 'SAMLRequest', params[:SAMLRequest]
  
  Select Wellpoint User
  %p= f.input :id, collection: WellpointUser.all, label: false, input_html: {value: '1'}
  %p= f.submit "Login"